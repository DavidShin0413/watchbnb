<div style="margin: 16px 32px 16px 32px;">
    <%= form_tag watches_path, method: :get do %>
      <div style="display: flex;">
        <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a watch"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
  <% end %>
</div>


<% @watches.each do |watch| %>
<div class="cards">
  <img src="<%= watch.img_url %>">
  <div class="card-trip-infos">
    <div>
      <h2><%= link_to watch.name, watch_path(watch) %></h2>
      <p><%= watch.style %></p>
      <p><%= watch.location %></p>
    </div>
    <h2 class="card-trip-pricing">$<%= watch.price %>/day</h2>
  </div>
</div>
<% end %>


<%= link_to "List New Watch", new_watch_path %>
